#Use Sudo vi etc/ansible/hosts command to edit the host file 

[servers] # Group 1
server_1 ansible_host=1.2.3.4  # Enter the server's Local IP address
server_2 ansible_host=5.88.66.13 # Enter the server's Local IP address

[prod] #Group 2
server_3 ansible_host=4.16.122.113 # Enter the server's Local IP address

[all:vars] # Variable
ansible_python_interpreter=/usr/bin/python3 #optional
ansible_user=ubuntu #optional
ansible_ssh_private_key_file=/home/ubuntu/keys/ansible-demo.pem #Enter the location of the key

